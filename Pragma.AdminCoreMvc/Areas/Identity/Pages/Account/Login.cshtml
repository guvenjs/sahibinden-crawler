@page
@model LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
    ViewData["AdditionalBodyClass"] = "login-bg";
    Layout = "~/Areas/Identity/Pages/Account/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/pages/login.css">
}

<div class="row">
    <div class="col s12">
        <div class="container">
            <div id="login-page" class="row">
                <div class="col s12 m6 l4 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8">
                    <form id="account" autocomplete="off" method="post" class="login-form">
                        <div class="row">
                            <div class="input-field col s12">
                                <h5 class="ml-4">Giriş Yap</h5>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s12">
                                <i class="material-icons prefix pt-2">person_outline</i>
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>


                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s12">
                                <i class="material-icons prefix pt-2">lock_outline</i>
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12 m12 l12 ml-2 mt-1">
                                <p>
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        <span>Beni Hatırla</span>
                                    </label>
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12">
                                <div asp-validation-summary="All" class="text-danger validation-summary"></div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <button type="submit" class="btn btn-primary waves-effect waves-light border-round gradient-45deg-red-pink col s4 float-none ml-auto mr-auto d-block">Giriş Yap</button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6 m6 l6">
                            </div>
                            <div class="input-field col s6 m6 l6">
                                <p class="margin right-align medium-small"><a asp-page="./ForgotPassword">Şifreni mi unuttun?</a></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="content-overlay"></div>
    </div>
</div>

